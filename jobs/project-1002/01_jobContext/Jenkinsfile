#!/usr/bin/groovy

@Library('jenkins-common-lib') _

/**
 * 　WU起動数監視ステージ
 * ・
 * ・
 * ・
 * ・
 * ・
 */
stage('WU起動数監視')
{
    node('master') { timestamps
    {
        // 宣言・初期化
        boolean failed_flag = false

        // 開始メッセージ
        printMsg('info', '-------------------------------------------------------')
        printMsg('info', 'WU起動数監視ステージ START')
        printMsg('info', '-------------------------------------------------------')

        // AP設定ロード
        def env = loadEnvConfig()

        // Webap,batchサーバのみ実施
        for (server in ['webap', 'batch'])
        {
            // リソース取得シェル実行
            def result = sshCmd(env, server, 'ls /opt/app/lib')

            // 標準エラー出力が返却されている場合は、例外を投げる
            assert result['stderror'] == null

            // WU起動数結果判定
            switch(true)
            {
                // 危険域
                case(result['stdout'].contains(env.resource.monitor.wu.execute.faital.keyword)) as Boolean:

                    // コマンド結果を標準出力
                    printMsg('warning', result['stdout'])

                    // メール通知
                    try
                    {
                        sendMail = emailext(
                            to        : debug.mail.address,
                            subject   : '${DEFAULT_SUBJECT}危険域',
                            body      : '''<p>ジョブ走行中に予期せぬエラーが発生しました。</p>
                                           <p>解析をお願いします。</p>''',
                            attachLog : true,
                            mimeType  : 'text/html'

                        ) { console ->

                            printMsg('info', 'メール通知に成功しました。')
                            printMsg('info', '送信先アドレス: ' + debug.mail.address)
                        }
                    }
                    catch(Exception e) {

                        printMsg('error', 'メール通知に失敗しました。')
                        throw e
                    }

                    // フラグを立てる
                    failed_flag = true

                    break

                // 注意域
                case(result['stdout'].contains(env.resource.monitor.wu.execute.warning.keyword)) as Boolean:

                    // コマンド結果を標準出力
                    printMsg('warning', result['stdout'])

                    // メール通知
                    try
                    {
                        sendMail = emailext(
                            to        : debug.mail.address,
                            subject   : '${DEFAULT_SUBJECT}危険域',
                            body      : '''<p>ジョブ走行中に予期せぬエラーが発生しました。</p>
                                           <p>解析をお願いします。</p>''',
                            attachLog : true,
                            mimeType  : 'text/html'

                        ) { console ->

                            printMsg('info', 'メール通知に成功しました。')
                            printMsg('info', '送信先アドレス: ' + debug.mail.address)
                        }
                    }
                    catch(Exception e) {

                        printMsg('error', 'メール通知に失敗しました。')
                        throw e
                    }

                    // フラグを立てる
                    failed_flag = true

                    break

                // 正常域
                default:

                    // コマンド結果を標準出力
                    printMsg('info', result['stdout'])
            }
        }

        // 終了メッセージ
        printMsg('info', '-------------------------------------------------------')
        printMsg('info', 'WU起動数監視ステージ FINISH')
        printMsg('info', '-------------------------------------------------------')
    }}
}





















